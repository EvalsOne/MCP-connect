{
  "mcpServers": {
    "fetch": {
      "command": "uvx",
      "args": ["mcp-server-fetch"],
      "description": "HTTP/HTTPS content fetcher"
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/tmp"],
      "description": "Local filesystem access to /tmp directory"
    },
    "chrome-devtools-headful": {
      "command": "npx",
      "args": [
        "chrome-devtools-mcp@latest",
        "--headless=false",
        "--isolated=false",
        "--browserUrl=http://127.0.0.1:9222",
        "--logFile=/home/user/mcp-debug.log",
        "--viewport=1280x800"
      ]
    },
    "playwright-headful": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--browser=chrome",
        "--no-sandbox",
        "--viewport-size=1280x800",
        "--cdp-endpoint=http://127.0.0.1:9222/"
      ],
      "env": {
        "DISPLAY": ":99"
      }
    }
  }
}

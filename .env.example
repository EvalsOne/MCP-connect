# Server Configuration
PORT=3000
NODE_ENV=development

# Security
AUTH_TOKEN=your-secret-token-here
ALLOWED_ORIGINS=

# Ngrok (optional, for tunnel support)
NGROK_AUTH_TOKEN=

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# ========================================
# Session Management Configuration
# ========================================

# TTL for inactive sessions (milliseconds)
# Default: 300000 (5 minutes)
# Increase this value for long-running tasks
STREAM_SESSION_TTL_MS=300000

# Session Cleanup Configuration
# 
# Disable automatic cleanup for Bridge sessions (default: false)
# When disabled, Bridge sessions will persist indefinitely until manually closed
# Set to "true" if you need long-lived sessions or want full control over session lifecycle
DISABLE_BRIDGE_CLEANUP=false